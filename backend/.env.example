# Django Settings
DJANGO_SETTINGS_MODULE=core.settings.dev
SECRET_KEY=dev-secret-change-me-in-production
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Для разработки используйте SQLite (по умолчанию)
DATABASE_URL=sqlite:///db.sqlite3

# Для продакшена используйте PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# CORS (Cross-Origin Resource Sharing)
# Разрешенные домены для фронтенда
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# RAG / GigaChat (опционально, для будущей интеграции)
GIGACHAT_BASE_URL=https://gigachat.api
GIGACHAT_API_KEY=dummy-key-change-me

# VK ID (опционально, для авторизации через VK)
# Получите App ID на https://dev.vk.com/
# VK_APP_ID=your_vk_app_id_here

# Яндекс.Карты (опционально, для отображения карт)
# Получите API ключ на https://developer.tech.yandex.ru/
# YANDEX_MAPS_API_KEY=your_yandex_maps_api_key_here
